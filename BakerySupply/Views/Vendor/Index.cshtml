@{
    Layout = "_Layout";
}

@using BakerySupply.Models;
@* Model is List of all the Vendors *@

<h1>Your Current Vendors:</h1>

@if (@Model.Count == 0)
{
    <h3>You currently have no Vendors listed for your business!</h3>
}

@foreach (Vendor vendor in Model)
{
    <h3><a href="/vendors/@vendor.Id">@vendor.Name</a></h3>
}

<br>
<a href="/vendors/new">Add another Vendor</a>
<p><a href="/">Go Back To Home</a></p>
